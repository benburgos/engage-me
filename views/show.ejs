<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %> 
</head>
<body>
<div class="container is-widescreen">

    <nav class="level">
        <div class="level-left">
          <div class="logo">
            <a href="/posts">
              <p class="title">ENGAGE.ME</p>
            </a>
          </div>
        </div>
      
        <div class="level-right">
            <div class="buttons">
                <a class="button is-link" href="/posts">
                    Return to All Posts
                </a>
            </div>
        </div>
    </nav>

            <div class="card">
                <header class="card-header">
                    <p class="card-header-title"><%= post.feedbackType %></p>
                </header>
                <div class="card-content">
                    <div class="columns">
                        <div class="column is-one-fifth has-text-centered">
                        <p class="title">Upvotes</p>
                        <p class="subtitle"><%= post.upVotes %> </p>
                        </div>
                        <div class="column">
                            <div class="content">
                                <p class="title">
                                    <%= post.title %> 
                                </p>
                                <div class="box">
                                    <%= post.description %> 
                                </div>
                                <time>
                                <% if (post.createdAt === post.updatedAt) { %>
                                    <p class="subtitle is-6">
                                        <i>
                                            Created:
                                            <%= post.createdAt.toLocaleDateString() %>
                                            @
                                            <%= post.createdAt.toLocaleTimeString() %>
                                        </i>
                                    </p>
                                <% } else { %>
                                    <p class="subtitle is-6">
                                        <i>
                                            Created:
                                            <%= post.createdAt.toLocaleDateString() %>
                                            @
                                            <%= post.createdAt.toLocaleTimeString() %>
                                        </i>
                                    </p>
                                    <p class="subtitle is-6">
                                        <i>
                                            Last Edit:
                                            <%= post.updatedAt.toLocaleDateString() %>
                                            @
                                            <%= post.updatedAt.toLocaleTimeString() %>
                                        </i>
                                    </p>
                                <% } %> 
                                </time>
                            </div>
                        </div>
                    </div>
                    <nav class="level">
                        <div class="level-left">
                          <div class="level-item"></div>
                        </div>
                        <div class="level-right">
                            <div class="buttons">
                                <a class="button is-warning" href="/posts/<%= post._id %>/edit">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
            <div class="card">
                <header class="card-header">
                    <p class="card-header-title">New Comment</p>
                </header>
                <div class="card-content">
                    <div class="columns">
                        <div class="column is-one-fifth has-text-centered">
                        </div>
                        <div class="column">
                            <div class="content">
                                <div class="box">
                                    <form action="/posts/<%= post._id %>" method="post">
                                    <input class="input is-normal" type="text" name="comment" placeholder="Type in your comment..">
                                </div>
                            </div>
                            <nav class="level">
                                <div class="level-left">
                                  <div class="level-item"></div>
                                </div>
                                <div class="level-right">
                                    <div class="buttons">
                                        <button type="submit" class="button is-link">
                                            + Add New Comment
                                        </button>
                                    </div>
                                </form>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

            <br>

            <% for( let index = 0; index < post.comments.length; index++ ) { %>
                <div class="card">
                    <header class="card-header">
                        <p class="card-header-title">Comment</p>
                    </header>
                    <div class="card-content">
                        <div class="columns">
                            <div class="column is-one-fifth has-text-centered">
                                <strong>Posted by:</strong> <br>
                                Your Manager on <br>
                                <%= post.comments[index].createdAt.toLocaleDateString() %>
                                @
                                <%= post.comments[index].createdAt.toLocaleTimeString() %>
                            </div>
                            <div class="column">
                                <div class="content">
                                    <div class="box">
                                        <%= post.comments[index].comment %> 
                                    </div>
                                </div>
                                <nav class="level">
                                    <div class="level-left">
                                      <div class="level-item"></div>
                                    </div>
                                    <div class="level-right">
                                        <a href="/posts/<%= post._id %>/comments/<%= post.comments[index]._id %>/edit" class="card-footer-item">Edit Comment</a>
                                    </div>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
    
        <br>
        
</div>
</body>
</html>